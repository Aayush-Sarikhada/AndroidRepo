<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    app:startDestination="@id/homeScreenFragment">

    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.example.android.nftbazaar.fragments.home.HomeScreenFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreenFragment_to_nftCollectionFragment"
            app:destination="@id/nftCollectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/nftCollectionFragment"
        android:name="com.example.android.nftbazaar.fragments.home.NftCollectionFragment"
        android:label="fragment_nft_collection"
        tools:layout="@layout/fragment_nft_collection" >
        <argument
            android:name="nft_index"
            app:argType="integer" />
    </fragment>
</navigation>
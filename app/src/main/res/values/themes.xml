<resources>

    <style name="spinnerItemStyle">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <!--    Theme for RecyclerView practice app-->
    <style name="Base.Theme.ArithmeticRVApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!--    Theme for NFT app-->
    <style name="Base.Theme.NFTBazaar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">#3EBFAA</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/inter_font</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <!--    App title logo style    -->
    <style name="app_title_style" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/abhayalibre_regular</item>
        <item name="android:textSize">44sp</item>
    </style>

    <!--    button style    -->
    <style name="button_style" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconTint">@null</item>
        <item name="android:foregroundGravity">center</item>
    </style>

    <!--    edit text field style   -->
    <style name="Theme.app.EditTextStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="strokeColor">@color/black</item>
        <item name="boxStrokeWidthFocused">4dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <!--    splash screen style     -->
    <style name="Theme.app.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/zanab_logo</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.NFTBazaar</item>
    </style>

<!--    Buy now button style        -->
    <style name="Theme.app.BuyNowButtonStyle" parent="Widget.Material3.Button">
        <item name="cornerRadius">30dp</item>
        <item name="android:backgroundTint">@color/button_background_color</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.JavaPractice" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Theme for activities and fragment example   -->
    <style name="Theme.ActivitiesAndFragments" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Theme for RecyclerView practice app-->
    <style name="Base.Theme.ArithmeticRVApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!--    Theme for stock exchange UI-->
    <style name="Base.Theme.StockExchangeUI" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Theme.StockExchangeUI" parent="Base.Theme.StockExchangeUI" />

    <!--    Theme for NFT app-->
    <style name="Base.Theme.NFTBazaar" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">#3EBFAA</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/inter_font</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <!--    spinner item style      -->
    <style name="spinnerItemStyle">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <!--    App title logo style    -->
    <style name="app_title_style" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/abhayalibre_regular</item>
        <item name="android:textSize">44sp</item>
    </style>

    <!--    button style    -->
    <style name="button_style" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconTint">@null</item>
        <item name="android:foregroundGravity">center</item>
    </style>

    <!--    edit text field style   -->
    <style name="Theme.app.EditTextStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="strokeColor">@color/black</item>
        <item name="boxStrokeWidthFocused">4dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <!--    Buy now button style        -->
    <style name="Theme.app.BuyNowButtonStyle" parent="Widget.Material3.Button">
        <item name="cornerRadius">30dp</item>
        <item name="android:backgroundTint">@color/button_background_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
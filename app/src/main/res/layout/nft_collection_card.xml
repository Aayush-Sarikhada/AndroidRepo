<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:background="@null"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/first_nft_img"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/second_nft_img"
                android:src="@drawable/avatar2"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/second_nft_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.28"
                android:src="@drawable/avatar4"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toEndOf="@id/first_nft_img"
                app:layout_constraintTop_toTopOf="@id/first_nft_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/third_nft_img"
                 />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/third_nft_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/nft1"
                app:layout_constraintWidth_percent="0.28"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="@id/second_nft_img"
                app:layout_constraintBottom_toBottomOf="@id/first_nft_img"
                app:layout_constraintEnd_toEndOf="@id/second_nft_img"
                app:layout_constraintTop_toBottomOf="@id/second_nft_img"
                 />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/collection_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/first_nft_img"
                app:layout_constraintTop_toBottomOf="@id/first_nft_img"
                android:layout_marginTop="16dp"
                android:text="@string/nft_bored_bunny"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/collection_name"
                app:layout_constraintTop_toBottomOf="@id/collection_name"
                android:layout_marginTop="4dp"
                android:text="@string/dour_darcel"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/nft_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/third_nft_img"
                app:layout_constraintBottom_toBottomOf="@id/collection_name"
                android:textColor="@color/nft_collection_price_color"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:text="@string/_0_18_eth"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buy_now_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.app.BuyNowButtonStyle"
                android:layout_marginVertical="8dp"
                android:textColor="@color/white"
                android:text="@string/buy_now"
                app:layout_constraintEnd_toEndOf="@id/nft_price"
                app:layout_constraintTop_toBottomOf="@id/nft_price"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
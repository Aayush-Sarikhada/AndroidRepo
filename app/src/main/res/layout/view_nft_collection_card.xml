<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    app:cardBackgroundColor="@color/nft_card_background_color"
    app:cardCornerRadius="@dimen/corner_radius_twelve_dp"
    app:cardElevation="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_first_nft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_eight_dp"
            android:adjustViewBounds="true"
            android:src="@drawable/avatar2"
            app:layout_constraintEnd_toStartOf="@id/img_second_nft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.6" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_second_nft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/avatar4"
            app:layout_constraintBottom_toTopOf="@id/img_third_nft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_first_nft"
            app:layout_constraintTop_toTopOf="@id/img_first_nft"
            app:layout_constraintWidth_percent="0.28" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_third_nft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/nft1"
            app:layout_constraintBottom_toBottomOf="@id/img_first_nft"
            app:layout_constraintEnd_toEndOf="@id/img_second_nft"
            app:layout_constraintStart_toStartOf="@id/img_second_nft"
            app:layout_constraintTop_toBottomOf="@id/img_second_nft"
            app:layout_constraintWidth_percent="0.28" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_collection_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_sixteen_dp"
            android:layout_marginTop="@dimen/margin_sixteen_dp"
            android:text="@string/nft_bored_bunny"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/img_first_nft"
            app:layout_constraintTop_toBottomOf="@id/img_first_nft" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_four_dp"
            android:text="@string/dour_darcel"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_twelve"
            app:layout_constraintStart_toStartOf="@id/tv_collection_name"
            app:layout_constraintTop_toBottomOf="@id/tv_collection_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_nft_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_sixteen_dp"
            android:text="@string/_0_18_eth"
            android:textColor="@color/nft_collection_price_color"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_collection_name"
            app:layout_constraintEnd_toEndOf="@id/img_third_nft" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_buy_now"
            style="@style/Theme.app.BuyNowButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_eight_dp"
            android:text="@string/buy_now"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_nft_price"
            app:layout_constraintTop_toBottomOf="@id/tv_nft_price" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/otp_verification"
                android:textColor="#CC000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/we_have_sent_verification_code_to"
                android:textColor="#80000000" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#CC000000"
                android:text="@string/dummy_mobile_number"
                android:textStyle="bold"/>
            
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="4"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/otp_et1"
                    android:tag="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:background="@drawable/otp_field_background"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/otp_et2"
                    android:tag="2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:background="@drawable/otp_field_background"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/otp_et3"
                    android:tag="3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:background="@drawable/otp_field_background"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/otp_et4"
                    android:tag="4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:background="@drawable/otp_field_background"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/resendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/resend_code"
                android:textColor="#99000000"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/verify_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_marginTop="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:backgroundTint="#705FAA"
                android:text="@string/verify"
                android:textColor="#FFFFFFFF"
                android:layout_gravity="center"
                app:cornerRadius="8dp"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
        
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
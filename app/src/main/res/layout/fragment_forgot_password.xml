<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".navigationComponentsPractice.authentication.ForgotPasswordFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/enter_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="74dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="@string/enter_mobile_number"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_mobile_number"
        style="@style/editText_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_mobile_number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/mobile_number" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_to_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.TextButton"
        android:textColor="@color/back_to_sign_in_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/til_mobile_number"
        app:layout_constraintEnd_toEndOf="@id/til_mobile_number"
        app:layout_constraintTop_toBottomOf="@id/til_mobile_number"
        android:text="@string/back_to_sign_in"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Send_otp_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#705FAA"
        android:text="@string/send"
        app:cornerRadius="8dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/til_mobile_number"
        app:layout_constraintEnd_toEndOf="@id/til_mobile_number"
        app:layout_constraintTop_toBottomOf="@id/back_to_sign_in"
        />

    <View
        android:id="@+id/first_divider_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:background="@color/black"
        app:layout_constraintEnd_toStartOf="@id/or_divider"
        app:layout_constraintStart_toStartOf="@id/Send_otp_button"
        app:layout_constraintTop_toBottomOf="@id/Send_otp_button" />

    <TextView
        android:id="@+id/or_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:text="@string/or"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/first_divider_line"
        app:layout_constraintEnd_toStartOf="@id/second_divider_line"
        app:layout_constraintStart_toEndOf="@id/first_divider_line"
        app:layout_constraintTop_toTopOf="@id/first_divider_line" />

    <View
        android:id="@+id/second_divider_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/or_divider"
        app:layout_constraintEnd_toEndOf="@id/Send_otp_button"
        app:layout_constraintStart_toEndOf="@id/or_divider"
        app:layout_constraintTop_toTopOf="@id/or_divider" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dont_have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/don_t_have_an_account"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/or_divider"
        app:layout_constraintStart_toStartOf="@id/or_divider"
        app:layout_constraintEnd_toEndOf="@id/or_divider"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/button_style"
        android:text="Sign up"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/first_divider_line"
        app:layout_constraintEnd_toEndOf="@id/second_divider_line"
        app:layout_constraintTop_toBottomOf="@id/dont_have_an_account"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
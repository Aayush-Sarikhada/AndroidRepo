<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.PendingIntentFragment">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAlarmManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_twenty_four_dp"
            android:text="@string/alarm_manger"
            app:layout_constraintBottom_toTopOf="@id/btnNotificationManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotificationManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_manager"
            app:layout_constraintEnd_toEndOf="@id/btnAlarmManager"
            app:layout_constraintStart_toStartOf="@id/btnAlarmManager"
            app:layout_constraintTop_toBottomOf="@id/btnAlarmManager" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
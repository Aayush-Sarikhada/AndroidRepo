<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/actionBarSize">

        <ImageButton
            android:id="@+id/menu"
            android:contentDescription="@string/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/toolbar_menu_margin_start"
            android:padding="5dp"
            android:background="@drawable/toolbar_icons_border"
            android:src="@drawable/baseline_menu" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:letterSpacing="@dimen/toolbar_title_spacing"
            android:text="@string/toolbarTitle"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_title_size"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/toolbar_notification_margin_end"
            android:layout_gravity="end"
            android:padding="5dp"
            android:background="@drawable/toolbar_icons_border"
            android:src="@drawable/baseline_notifications_none"
            android:contentDescription="@string/notification_icon"/>
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_bar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_menu_margin_start"
        android:layout_marginTop="@dimen/toolbar_menu_margin_start"
        android:background="@color/backgroundColor"
        app:tabBackground="@drawable/tablayout_color_selector"
        app:tabGravity="start"
        app:tabIndicatorHeight="@dimen/tab_indicator_height"
        app:tabSelectedTextColor="@color/tab_item_selected_text_color"
        app:tabTextColor="@color/tab_item_not_selected_text_color"/>
    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/heading_margin_top"
        android:layout_marginEnd="@dimen/heading_margin_end"
        android:layout_marginStart="@dimen/heading_margin_start">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/heading_exchange"
            android:layout_weight="@integer/heading_exchange_weight"
            android:textColor="@color/white"
            android:textSize="@dimen/heading_exchange_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heading_date"
            android:textColor="@color/heading_date_color"
            android:textStyle="bold"
            android:textSize="@dimen/heading_date_text_size"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/divider_margin_top"
        android:layout_marginEnd="@dimen/divider_margin_end"
        android:layout_marginStart="@dimen/divider_margin_start">
        <View
            android:layout_width="@dimen/divider_white_view_width"
            android:layout_height="@dimen/divider_white_view_height"
            android:background="@color/white"/>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_gray_view_height"
            android:layout_weight="@integer/divider_gray_view_weight"
            android:background="@color/divider_gray_view_color"/>
        <View
            android:layout_width="@dimen/divider_white_view_width"
            android:layout_height="@dimen/divider_white_view_height"
            android:background="@color/white"/>
    </LinearLayout>

    <include layout="@layout/exchange_details_cardview" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/market_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/market_indicators_label"
        android:textColor="@color/heading_date_color"
        android:layout_gravity="center"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/exchange_for_btn_padding"
        android:layout_marginTop="@dimen/exchange_for_btn_margin_top"
        android:layout_marginHorizontal="@dimen/exchange_for_btn_margin_horizontal"
        android:background="@drawable/exchange_background_view">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/exchange_for_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textSize="@dimen/exchange_for_text_size"
            android:padding="@dimen/exchange_for_text_padding"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/received_stock_amount"
            android:text="@string/exchange_for"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/received_stock_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/exchange_for_text_size"
            android:padding="@dimen/exchange_for_text_padding"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:background="@drawable/exchange_background_view"
            app:layout_constraintStart_toEndOf="@id/exchange_for_label"
            app:layout_constraintTop_toTopOf="@id/exchange_for_label"
            app:layout_constraintEnd_toStartOf="@id/received_stock_name"
            android:text="@string/total_stock"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/received_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/exchange_for_text_size"
            android:padding="@dimen/exchange_for_text_padding"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/received_stock_amount"
            app:layout_constraintTop_toTopOf="@id/received_stock_amount"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/stock_name_total"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".navigationComponentsPractice.authentication.Authentication"
    android:background="@drawable/background_gradient">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/app_name_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="44sp"
        android:layout_marginTop="95dp"
        android:layout_marginStart="42dp"
        android:fontFamily="@font/abhayalibre_regular"
        android:textColor="@color/black"
        android:text="@string/nft_bazaar"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/app_name_logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="42dp"
        android:text="Login"
        style="@style/button_style"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/create_your_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your account"
        android:fontFamily="@font/inter_font"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/app_name_logo"
        app:layout_constraintStart_toStartOf="@id/app_name_logo"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/editText_style"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/login_button"
        app:layout_constraintStart_toStartOf="@id/app_name_logo"
        app:layout_constraintTop_toBottomOf="@id/create_your_account">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/full_name" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/editText_style"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/til_full_name"
        app:layout_constraintStart_toStartOf="@id/til_full_name"
        app:layout_constraintTop_toBottomOf="@id/til_full_name">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/email_address" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/editText_style"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/til_email"
        app:layout_constraintStart_toStartOf="@id/til_email"
        app:layout_constraintTop_toBottomOf="@id/til_email">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/password_minimum_8_characters" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/by_signin_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/til_password"
        app:layout_constraintTop_toBottomOf="@id/til_password"
        android:text="@string/by_signing_up_you_accept_our"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/by_signin_up"
        app:layout_constraintBottom_toBottomOf="@id/by_signin_up"
        android:text="@string/terms_and_conditions"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/app_name_logo"
        app:layout_constraintEnd_toEndOf="@id/login_button"
        app:layout_constraintTop_toBottomOf="@id/by_signin_up"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:backgroundTint="#705FAA"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/first_divider_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@id/signup_button"
        app:layout_constraintTop_toBottomOf="@id/signup_button"
        app:layout_constraintEnd_toStartOf="@id/or_divider"
        />
    <TextView
        android:id="@+id/or_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/first_divider_line"
        app:layout_constraintTop_toTopOf="@id/first_divider_line"
        app:layout_constraintEnd_toStartOf="@id/second_divider_line"
        app:layout_constraintBottom_toBottomOf="@id/first_divider_line"
        android:layout_marginHorizontal="32dp"
        android:textColor="@color/black"
        android:text="@string/or"/>
    <View
        android:id="@+id/second_divider_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintStart_toEndOf="@id/or_divider"
        app:layout_constraintEnd_toEndOf="@id/signup_button"
        app:layout_constraintTop_toTopOf="@id/or_divider"
        app:layout_constraintBottom_toBottomOf="@id/or_divider"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_with_google"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/signup_button"
        app:layout_constraintEnd_toEndOf="@id/signup_button"
        app:layout_constraintTop_toBottomOf="@id/first_divider_line"
        app:icon="@drawable/google_icon"
        android:layout_marginTop="24dp"
        android:text="@string/continue_with_google"
        style="@style/button_style"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
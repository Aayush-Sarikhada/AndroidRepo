<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="arithmeticCard"
            type="com.example.android.recyclerViewPractice.models.ArithmeticCardStateDataModel" />

        <variable
            name="constants"
            type="com.example.android.recyclerViewPractice.Constants" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.Theme.ArithmeticRVApp"
        app:cardElevation="@dimen/elevation_arithmetic_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/padding_bottom_arithmetic_card">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/img_delete_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/delete_this_card"
                android:padding="@dimen/padding_icon_medium"
                android:src="@drawable/baseline_delete_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_first_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_first_number"
                android:layout_marginTop="@dimen/margin_top_first_number"
                app:layout_constraintEnd_toStartOf="@id/tv_multiply"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_first_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/first_number"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="@{constants.MAX_DIGITS}"
                    android:minHeight="@dimen/min_height" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tv_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal_multiply"
                android:padding="@dimen/padding_icon_small"
                android:rotation="@{constants.ROTATION_MULTIPLY}"
                android:tint="@color/primary"
                app:layout_constraintBottom_toBottomOf="@id/til_first_number"
                app:layout_constraintEnd_toStartOf="@id/til_second_number"
                app:layout_constraintStart_toEndOf="@id/til_first_number"
                app:layout_constraintTop_toTopOf="@id/til_first_number"
                app:srcCompat="@drawable/baseline_add_24" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_second_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_end_second_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_multiply"
                app:layout_constraintTop_toTopOf="@id/til_first_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_second_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/second_number"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="@{constants.MAX_DIGITS}"
                    android:minHeight="@dimen/min_height" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_vertical_plus"
                android:padding="@dimen/padding_icon_small"
                android:tint="@color/primary"
                app:layout_constraintBottom_toTopOf="@id/rv_spinner"
                app:layout_constraintEnd_toEndOf="@id/tv_multiply"
                app:layout_constraintStart_toStartOf="@id/tv_multiply"
                app:layout_constraintTop_toBottomOf="@id/tv_multiply"
                app:srcCompat="@drawable/baseline_add_24" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/rv_images"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_more_spinner"
                app:layout_constraintStart_toStartOf="@id/til_first_number"
                app:layout_constraintTop_toBottomOf="@id/img_add" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_more_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_spinner"
                app:layout_constraintBottom_toBottomOf="@id/rv_spinner"
                app:layout_constraintEnd_toEndOf="@+id/til_second_number" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_image_rv"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@+id/til_second_number"
                app:layout_constraintStart_toStartOf="@id/rv_spinner"
                app:layout_constraintTop_toBottomOf="@id/rv_spinner" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_more_images"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/add_more_images"
                android:text="@string/add_image"
                app:layout_constraintBottom_toTopOf="@id/divider_bottom"
                app:layout_constraintEnd_toEndOf="@id/btn_add_more_spinner"
                app:layout_constraintStart_toStartOf="@+id/btn_add_more_spinner"
                app:layout_constraintTop_toBottomOf="@+id/rv_images" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_total_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_total"
                android:ellipsize="marquee"
                android:focusable="true"
                android:maxLines="@{constants.MAX_LINES}"
                android:text="@string/total"
                android:textSize="@dimen/text_size_total"
                app:layout_constraintBottom_toBottomOf="@id/btn_add_more_images"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_more_images"
                app:layout_constraintStart_toStartOf="@id/rv_images" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_divider"
                android:layout_marginVertical="@dimen/margin_vertical_divider"
                app:layout_constraintBottom_toTopOf="@id/btn_add_more_cards"
                app:layout_constraintEnd_toEndOf="@id/btn_add_more_images"
                app:layout_constraintStart_toStartOf="@id/tv_total_label"
                app:layout_constraintTop_toBottomOf="@id/tv_total_label" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_more_cards"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/add_more_cards"
                android:text="@string/add_more"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/btn_add_more_images"
                app:layout_constraintStart_toStartOf="@+id/btn_add_more_images" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
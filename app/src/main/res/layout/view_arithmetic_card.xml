<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="arithmeticCard"
            type="com.example.recyclerViewPractice.models.ArithmeticCardStateDataModel" />

        <variable
            name="constants"
            type="com.example.recyclerViewPractice.Constants" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.Theme.ArithmeticRVApp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/img_delete_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/delete_this_card"
                android:padding="8dp"
                android:src="@drawable/baseline_delete_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_first_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toStartOf="@id/tv_multiply"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_first_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/first_number"
                    android:imeOptions="actionNext"
                    android:maxLength="10"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:text="@{arithmeticCard.strFirstEditTextValue.empty ? arithmeticCard.strFirstEditTextValue  : constants.STRING_ZERO}" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tv_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:padding="4dp"
                android:rotation="45"
                android:tint="@color/primary"
                app:layout_constraintBottom_toBottomOf="@id/til_first_number"
                app:layout_constraintEnd_toStartOf="@id/til_second_number"
                app:layout_constraintStart_toEndOf="@id/til_first_number"
                app:layout_constraintTop_toTopOf="@id/til_first_number"
                app:srcCompat="@drawable/baseline_add_24" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_second_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_multiply"
                app:layout_constraintTop_toTopOf="@id/til_first_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_second_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/second_number"
                    android:maxLength="10"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:text="@{arithmeticCard.strSecondEditTextValue.empty ? arithmeticCard.strSecondEditTextValue  : constants.STRING_ZERO}" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:padding="4dp"
                android:tint="@color/primary"
                app:layout_constraintBottom_toTopOf="@id/rv_spinner"
                app:layout_constraintEnd_toEndOf="@id/tv_multiply"
                app:layout_constraintStart_toStartOf="@id/tv_multiply"
                app:layout_constraintTop_toBottomOf="@id/tv_multiply"
                app:srcCompat="@drawable/baseline_add_24" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:listitem="@layout/view_spinner_number"
                android:focusable="true"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/rv_images"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_more_spinner"
                app:layout_constraintStart_toStartOf="@id/til_first_number"
                app:layout_constraintTop_toBottomOf="@id/img_add" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_more_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_spinner"
                app:layout_constraintBottom_toBottomOf="@id/rv_spinner"
                app:layout_constraintEnd_toEndOf="@+id/til_second_number" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@+id/til_second_number"
                app:layout_constraintStart_toStartOf="@id/rv_spinner"
                app:layout_constraintTop_toBottomOf="@id/rv_spinner" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_more_images"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/add_more_images"
                android:text="@string/add_image"
                app:layout_constraintBottom_toTopOf="@id/divider_bottom"
                app:layout_constraintEnd_toEndOf="@id/btn_add_more_spinner"
                app:layout_constraintStart_toStartOf="@+id/btn_add_more_spinner"
                app:layout_constraintTop_toBottomOf="@+id/rv_images" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_total_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:maxLines="1"
                android:text="@string/total"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/btn_add_more_images"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_more_images"
                app:layout_constraintStart_toStartOf="@id/rv_images" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintBottom_toTopOf="@id/btn_add_more_cards"
                app:layout_constraintEnd_toEndOf="@id/btn_add_more_images"
                app:layout_constraintStart_toStartOf="@id/tv_total_label"
                app:layout_constraintTop_toBottomOf="@id/tv_total_label" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_more_cards"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/add_more_cards"
                android:text="@string/add_more"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/btn_add_more_images"
                app:layout_constraintStart_toStartOf="@+id/btn_add_more_images" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
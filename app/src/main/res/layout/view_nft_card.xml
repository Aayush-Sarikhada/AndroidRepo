<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_nft"
            android:layout_width="@dimen/nft_img_width"
            android:layout_height="@dimen/nft_img_height"
            android:scaleType="center"
            android:src="@drawable/image_not_found_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_nft_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_eight_dp"
            android:layout_marginTop="@dimen/margin_sixteen_dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/nft_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_fourteen"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tv_nft_id"
            app:layout_constraintHorizontal_weight="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_nft" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_nft_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_twenty_eight_dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/nft_id_dummy"
            android:textSize="@dimen/text_size_twelve"
            app:layout_constraintBottom_toBottomOf="@id/tv_nft_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintStart_toEndOf="@+id/tv_nft_name"
            app:layout_constraintTop_toTopOf="@id/tv_nft_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_eight_dp"
            android:text="@string/price_label"
            android:textSize="@dimen/text_size_twelve"
            app:layout_constraintStart_toStartOf="@id/tv_nft_name"
            app:layout_constraintTop_toBottomOf="@id/tv_nft_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_single_nft_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_ten_dp"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/_0_18_eth"
            android:textColor="@color/nft_collection_price_color"
            android:textSize="@dimen/text_size_twelve"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_single_nft_price"
            app:layout_constraintEnd_toEndOf="@id/tv_nft_id"
            app:layout_constraintStart_toEndOf="@+id/tv_price_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
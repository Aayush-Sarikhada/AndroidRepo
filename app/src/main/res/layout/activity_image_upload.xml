<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".webservices.views.imageupload.ImageUploadActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgUpload"
            android:layout_width="@dimen/height_image_to_upload"
            android:layout_height="@dimen/height_image_to_upload"
            android:layout_marginTop="@dimen/margin_twenty_six_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressImgUpload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btnUploadImage"
            app:layout_constraintEnd_toEndOf="@id/imgUpload"
            app:layout_constraintStart_toStartOf="@id/imgUpload"
            app:layout_constraintTop_toBottomOf="@id/imgUpload" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_twenty_four_dp"
            android:text="@string/select_image"
            app:layout_constraintEnd_toEndOf="@id/imgUpload"
            app:layout_constraintStart_toStartOf="@id/imgUpload"
            app:layout_constraintTop_toBottomOf="@id/progressImgUpload" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_image"
            app:layout_constraintEnd_toEndOf="@id/btnSelectImage"
            app:layout_constraintStart_toStartOf="@id/btnSelectImage"
            app:layout_constraintTop_toBottomOf="@id/btnSelectImage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSeeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_image"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/btnSelectImage"
            app:layout_constraintStart_toStartOf="@id/btnSelectImage"
            app:layout_constraintTop_toBottomOf="@id/btnUploadImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>